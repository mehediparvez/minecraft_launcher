{
  "name": "void-client",
  "version": "1.0.0",
  "description": "Minecraft launcher with Microsoft authentication and captcha security",
  "main": "./src/index.js",
  "homepage": "https://github.com/voidclient/void-client",
  "author": {
    "name": "Void Client Team",
    "email": "contact@voidclient.dev"
  },
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test-captcha": "electron test-captcha.js",
    "test-setup": "NODE_ENV=testing electron .",
    "test-no-download": "SKIP_DOWNLOADS=true NODE_ENV=testing electron .",
    "build-all": "node build-all-platforms.js",
    "build-with-icon": "node build-with-icon.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac --x64 --arm64",
    "dist:linux": "electron-builder --linux --x64",
    "build:all-platforms": "npm run dist:win && npm run dist:mac && npm run dist:linux",
    "release": "npm run dist && gh release create"
  },
  "build": {
    "appId": "com.voidclient.app",
    "productName": "Void Client",
    "directories": {
      "output": "dist"
    },
    "publish": null,
    "files": [
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{.travis,.jenkins,.appveyor,tsconfig.json,tsconfig.esm.json,webpack.config.js}",
      "**/*",
      "!dev-resources${/*}",
      "!dev-workspace${/*}",
      "!java${/*}",
      "!minecraft/assets${/*}",
      "!minecraft/libraries${/*}",
      "!minecraft/versions${/*}",
      "!minecraft/mods${/*}",
      "!minecraft/natives${/*}",
      "!minecraft/downloads${/*}",
      "!minecraft/logs${/*}",
      "!minecraft/saves${/*}",
      "!minecraft/resourcepacks${/*}"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Void Client Team"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game",
      "maintainer": "Void Client Team <contact@voidclient.dev>",
      "desktop": {
        "Name": "Void Client",
        "Comment": "Minecraft launcher with Microsoft authentication",
        "Categories": "Game;ActionGame;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-x64-Setup.${ext}",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "language": "1033",
      "multiLanguageInstaller": false,
      "packElevateHelper": false,
      "perMachine": false,
      "runAfterFinish": true,
      "shortcutName": "${productName}"
    }
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.2",
    "keytar": "^7.9.0",
    "minecraft-launcher-core": "^3.16.18",
    "node-fetch": "^2.6.7",
    "tar": "^7.4.3",
    "uuid": "^11.1.0",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  }
}
