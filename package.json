{
  "name": "void-client",
  "version": "1.0.0",
  "description": "Minecraft launcher with Microsoft authentication and captcha security",
  "main": "./src/index.js",
  "homepage": "https://github.com/voidclient/void-client",
  "author": {
    "name": "Void Client Team",
    "email": "contact@voidclient.dev"
  },
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test-captcha": "electron test-captcha.js",
    "build-all": "node build-all-platforms.js",
    "build-with-icon": "node build-with-icon.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.voidclient.app",
    "productName": "Void Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{.travis,.jenkins,.appveyor,tsconfig.json,tsconfig.esm.json,webpack.config.js}",
      "**/*",
      "!dev-resources${/*}",
      "!dev-workspace${/*}"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "app.asar.unpacked/build",
        "filter": [
          "*.png",
          "*.ico",
          "*.icns"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "build/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.games",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game",
      "maintainer": "Void Client Team <contact@voidclient.dev>",
      "icon": "build/icon.png",
      "desktop": {
        "Icon": "/usr/share/pixmaps/void-client.png",
        "Name": "Void Client",
        "Comment": "Minecraft launcher with Microsoft authentication",
        "Categories": "Game;ActionGame;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "artifactName": "${productName}-${version}-x64-installer.${ext}",
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@azure/msal-node": "^3.7.2",
    "keytar": "^7.9.0",
    "minecraft-launcher-core": "^3.16.18",
    "node-fetch": "^2.6.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  }
}
